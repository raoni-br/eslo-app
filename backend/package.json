{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "prisma": {
    "schema": "app/prisma/schema.prisma",
    "seed": "./node_modules/.bin/ts-node-dev app/prisma/seed.ts"
  },
  "scripts": {
    "docker:test:watch": "docker-compose -p test-app -f ../docker-compose.test.yaml run --rm backend_test npm run test:watch && docker-compose -p test-app -f ../docker-compose.test.yaml down",
    "docker:test:run": "docker-compose -p test-app -f ../docker-compose.test.yaml run --rm backend_test npm run test && docker-compose -p test-app -f ../docker-compose.test.yaml down",
    "test": "NODE_ENV=test npm run reset-db:no-seed && jest --coverage --runInBand",
    "test:watch": "NODE_ENV=test npm run reset-db:no-seed && jest --coverage --runInBand --watch",
    "start": "NODE_ENV=local npm run generate-db && ./node_modules/.bin/ts-node-dev app/bin/www.ts",
    "lint": "npx eslint --ext .ts app --fix",
    "prettier": "npx prettier --write \"**/*.ts\"",
    "prettier-check": "npx prettier --check \"**/*.ts\"",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "dev": "ts-node-dev --transpile-only --no-notify app/bin/www.ts",
    "build": "tsc -p . && cp app/prisma/schema.prisma dist/prisma && cp -r app/prisma/migrations/ dist/prisma/migrations/",
    "serve:prod": "env TZ='UTC' NODE_ENV=production node app/bin/www.js",
    "migrate-db:dev": "npx prisma migrate dev",
    "generate-db": "npx prisma generate",
    "status-db": "npx prisma migrate status",
    "deploy-db:prod": "npx prisma migrate deploy",
    "reset-db": "npx prisma migrate reset -f",
    "reset-db:no-seed": "npx prisma migrate reset -f --skip-seed --skip-generate",
    "seed-db": "npx prisma db seed"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "4.1.1",
    "@prisma/client": "3.2.0",
    "@sendgrid/mail": "7.4.6",
    "apollo-server-errors": "3.2.0",
    "apollo-server-express": "3.4.0",
    "apollo-server-plugin-base": "3.3.0",
    "apollo-server-types": "3.4.0",
    "argon2": "0.28.2",
    "axios": "0.21.4",
    "cookie-parser": "1.4.5",
    "cors": "2.8.5",
    "debug": "4.3.2",
    "errorhandler": "1.5.1",
    "express": "4.17.1",
    "express-graphql": "0.12.0",
    "express-session": "1.17.2",
    "graphql": "15.7.2",
    "helmet": "4.6.0",
    "http-errors": "1.8.0",
    "jsonwebtoken": "8.5.1",
    "luxon": "2.0.2",
    "morgan": "1.10.0",
    "nexus": "1.1.0",
    "passport": "0.4.1",
    "passport-google-oauth20": "2.0.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "rand-token": "1.0.1",
    "reflect-metadata": "0.1.13",
    "rrule": "2.6.8",
    "stripe": "8.176.0",
    "uuid": "8.3.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.36",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.12",
    "@types/debug": "4.1.7",
    "@types/errorhandler": "1.5.0",
    "@types/express": "4.17.13",
    "@types/express-session": "1.17.4",
    "@types/http-errors": "1.8.1",
    "@types/jest": "27.0.1",
    "@types/luxon": "2.0.4",
    "@types/morgan": "1.9.3",
    "@types/passport": "1.0.7",
    "@types/passport-google-oauth20": "2.0.9",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/uuid": "8.3.1",
    "@types/validator": "13.6.3",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.2",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.2.1",
    "prettier": "2.4.1",
    "prisma": "3.2.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.3"
  }
}
